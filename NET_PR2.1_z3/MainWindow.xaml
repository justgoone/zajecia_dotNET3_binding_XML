<Window
    x:Class="NET_PR2._1_z3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:NET_PR2._1_z3"
    mc:Ignorable="d"
        
    Title="Wiązanie do XML"
    Height="650"
    Width="500"
    FontSize="20"
    >
    <Grid>
        <ListBox>
            <ListBox.ItemsSource>
                <Binding
                    Source="{StaticResource ProduktyDane}"
                    XPath="Produkt"
                    />
            </ListBox.ItemsSource>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding XPath=Nazwa}"/>
                        <TextBlock Text=", cena (zł): "/>
                        <TextBlock Text="{Binding XPath=Cena}"/>
                        <TextBlock Text=", kraj pochodzenia: "/>
                        <TextBlock Text="{Binding
                            XPath=KrajPochodzenia
                            }"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
