<Window 
    x:Class="zajecia_dotNET3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:zajecia_dotNET3"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="800"
    Width="600">
    <Grid>
        <DataGrid ItemsSource="{Binding
            Source={StaticResource ProduktyDane},
            XPath=Produkt
            }"
        AutoGenerateColumns="False"    
        >
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Nazwa"
                    Binding="{Binding XPath=Nazwa}"
                />
                <DataGridTextColumn
                    Header="Cena (zł)"
                    Binding="{Binding XPath=Cena}"
                />
                <DataGridTextColumn
                    Header="Kraj pochodzenia"
                    Binding="{Binding XPath=KrajPochodzenia}"
                />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    
</Window>
