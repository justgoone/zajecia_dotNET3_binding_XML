<Window 
    x:Class="zajecia_dotNET3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:zajecia_dotNET3"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="800"
    Width="600">
    <Grid>
        <ListBox FontSize="20">
            <ListBox.ItemsSource>
                <Binding
                    Source="{StaticResource ProduktyDane}"
                    XPath="Produkt"
                    />
            </ListBox.ItemsSource>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding XPath=Nazwa}"/>
                        <TextBlock Text=", cena (zł): "/>
                        <TextBlock Text="{Binding XPath=Cena}"/>
                        <TextBlock Text=", kraj pochodzenia: "/>
                        <TextBlock Text="{Binding XPath=KrajPochodzenia}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
    
</Window>
